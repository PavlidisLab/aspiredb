<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cell="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:my="urn:import:ubc.pavlab.aspiredb.client.view.filter">

	<ui:style>
		.button {
			margin: 0px 0px 0px 3px;
		}
	</ui:style>
	
    <g:HorizontalPanel>
   	    <my:SuggestionComboBox width="100%" ui:field="suggestionComboBox"/>
        <cell:ColorPalette ui:field="colorPalette" />
        <g:Button ui:field="okButton" styleName="{style.button}" text="OK"/>
   	    <g:Button ui:field="cancelButton" styleName="{style.button}" text="Cancel"/>
    </g:HorizontalPanel>

</ui:UiBinder>