<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
        >


	<ui:style>
		.button {
			margin: 2px 2px 2px 2px;
			padding: 2px 2px 2px 2px;
		}
		.richTextArea {
			background-color: #FFFFFF;
		}
	</ui:style>
  
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="southData" />

	<container:BorderLayoutContainer height="300px" width="500px">
		<container:center >
			<g:RichTextArea ui:field="richTextArea" styleName="{style.richTextArea}"></g:RichTextArea>
		</container:center>

		<container:south layoutData="{southData}" >
			<g:HorizontalPanel  >
				<g:cell horizontalAlignment="ALIGN_RIGHT">
					<g:HorizontalPanel>			
						<g:Button ui:field="okButton" text="OK"  styleName="{style.button}" />
						<g:Button ui:field="clearButton" text="Clear"  styleName="{style.button}"/>
						<g:Button ui:field="cancelButton" text="Cancel"  styleName="{style.button}"/>
					</g:HorizontalPanel>					
				</g:cell>
				
			</g:HorizontalPanel>
		</container:south>
	</container:BorderLayoutContainer>
</ui:UiBinder>