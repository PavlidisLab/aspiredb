<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:my="urn:import:ubc.pavlab.aspiredb.client.view.suggestBox"
        >


	<ui:style>
		.image {
			padding: 2px 2px 2px 2px;
		}
		.filter-body {
			padding-bottom: 5px;
		}
		.exampleValuesHTML {
			font-size: smaller;
			color: gray;
		}
	</ui:style>
  
	<g:VerticalPanel styleName="{style.filter-body}">
		<g:HorizontalPanel ui:field="widgetContainer" >
			<form:ComboBox ui:field="propertyComboBox"  />
			<form:ComboBox ui:field="operatorComboBox"  />
			<g:VerticalPanel >
				<g:TextBox ui:field="textBox" width="360px"/>
				<my:MultiValueSuggestBox ui:field="multiValueSuggestBox" width="367px"/>
				<g:HTML ui:field="exampleValuesHTML" styleName="{style.exampleValuesHTML}" />
			</g:VerticalPanel>			
			<g:Image width="10px" visible="false" ui:field="removeImage" altText="Remove filter" title="Remove filter" url="cross.png" styleName="gwt-Hyperlink {style.image}"/>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>