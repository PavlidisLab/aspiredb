<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >


	<ui:style>
		.image {
			padding: 2px 2px 2px 2px;
		}
		.filter-body {
			padding: 4px;
			margin-bottom: 5px;
			border: 1px solid lightgray;
		}
	</ui:style>
  
	<g:VerticalPanel styleName="{style.filter-body}" >
		<g:HorizontalPanel width="100%" >
			<g:cell horizontalAlignment="ALIGN_RIGHT" >
				<g:Image width="12px" visible="false" ui:field="removeImage" altText="Remove filter" title="Remove filter" url="cross.png" styleName="gwt-Hyperlink"/>
			</g:cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel width="100%" >
			<g:cell  horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM" >
				<g:VerticalPanel ui:field="queriesPanel" />
			</g:cell>
			<g:cell width="20px" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM" >
				<g:PushButton text="OR" ui:field="addButton"  />
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>