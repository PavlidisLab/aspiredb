 <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="tableViewTabConfig">
    <ui:attributes text="Table view" />
  </ui:with>
  <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="ideogramViewTabConfig">
    <ui:attributes text="Ideogram view" />
  </ui:with>

 <ui:with type="ubc.pavlab.aspiredb.client.resources.AspireImageResources" field="images" />

    <gxt:FramedPanel bodyStyle="background-color:white;" headingText="Variants" ui:field="main" >
		<container:VerticalLayoutContainer>
			<container:child>
				<toolbar:ToolBar spacing="1" minButtonWidth="40" ui:field="toolbar" height="35" >
                    <button:TextButton text="Labels">
                        <button:menu>
                            <menu:Menu>
                                <menu:MenuItem ui:field="makeLabelButton" text="Make label..."/>
<!--
                                <menu:MenuItem ui:field="removeLabelMenuItem" text="Clear label"/>
-->
                                <menu:MenuItem ui:field="labelSettingsButton" text="Settings..."/>
                            </menu:Menu>
                        </button:menu>
                    </button:TextButton>
                    <toolbar:SeparatorToolItem />
                    <button:TextButton text="Actions">
                        <button:menu>
                            <menu:Menu>
                                <menu:MenuItem ui:field="showRangeInUCSCButton" text="View in UCSC"/>
                                <menu:MenuItem ui:field="showGenesButton" text="View genes"/>
                            </menu:Menu>
                        </button:menu>
                    </button:TextButton>
                    <toolbar:SeparatorToolItem />
                    <button:TextButton ui:field="selectAllButton" />
                    <toolbar:SeparatorToolItem />
                    <button:TextButton text="Ideogram settings" ui:field="ideogramSettingsMenu">
                        <button:menu>
                            <menu:Menu>
                                <menu:MenuItem text="Zoom" icon="{images.zoomIcon}">
                                    <menu:submenu>
                                        <menu:Menu>
                                            <menu:MenuItem ui:field="zoomNormalButton" text="Fit"/>
                                            <menu:MenuItem ui:field="zoom2XButton" text="2x"/>
                                            <menu:MenuItem ui:field="zoom4XButton" text="4x"/>
                                        </menu:Menu>
                                    </menu:submenu>
                                </menu:MenuItem>
                                <menu:MenuItem ui:field="showColourLegend" text="Show legend" />
                                <menu:MenuItem ui:field="chooseDisplayProperty" text="Property to display" />
                            </menu:Menu>
                        </button:menu>
                    </button:TextButton>
                    <toolbar:SeparatorToolItem />
                    <button:TextButton ui:field="downloadAllButton" icon="{images.downloadIcon}" iconAlign="TOP"
                                       toolTip="Download table contents as text" />
                </toolbar:ToolBar>
			</container:child>
			<container:child>
				<gxt:TabPanel ui:field="tabPanel">
					<!--<gxt:child config="{tableViewTabConfig}">-->
						<!--<common:PagingGridPanel ui:field="variantGrid" />-->
					<!--</gxt:child>-->
					<gxt:child config="{ideogramViewTabConfig}">
						<ideogram:IdeogramPanel ui:field="ideogram" />
					</gxt:child>
				</gxt:TabPanel>
			</container:child>			
		</container:VerticalLayoutContainer>
	</gxt:FramedPanel>

</ui:UiBinder> 