<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

	<ui:style>
		.margins {
			
		}
		.filter-body {
			background-color : #FFFFD0;
			margin: 2px 2px 2px 2px;
			padding: 2px 5px 5px 5px;
			border: 1px solid lightgray;
		}
		.queries-panel-title {
			margin-top: 3px; 
		}
		.image {
			padding: 2px 2px 2px 2px;
		}
		.addImage {
			padding: 2px 2px 2px 5px;
		}
	</ui:style>

	<g:VerticalPanel ui:field="widgetContainer" styleName="{style.filter-body}" width="100%">
		<g:HorizontalPanel width="100%">
			<g:cell width="50%" horizontalAlignment="ALIGN_LEFT">
				<g:VerticalPanel >
					<g:HTML ui:field="titleHTML" />
					<g:HTML ui:field="queriesPanelTitleHTML" styleName="{style.queries-panel-title}" />
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="50%" horizontalAlignment="ALIGN_RIGHT">
				<g:HorizontalPanel >
<!-- 
					<g:Image ui:field="openEditWindowImage" url="page_upload.png" styleName="gwt-Hyperlink {style.image}"/>
-->
					<g:Image ui:field="removeFilterImage" altText="Remove filter" title="Remove filter" url="cross.png" styleName="gwt-Hyperlink {style.image}"/>
				</g:HorizontalPanel>				
			</g:cell>		
		</g:HorizontalPanel>
		<g:VerticalPanel ui:field="queriesPanel" />
<!--  
		<g:Image width="20px" ui:field="addImage" altText="Add filter" title="Add filter" url="add.png" styleName="gwt-Hyperlink {style.addImage}"/>
-->
		<g:HorizontalPanel >
				<g:PushButton text="AND" ui:field="addButton"  />
		</g:HorizontalPanel>		
	</g:VerticalPanel>

</ui:UiBinder> 